<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <!-- ================= Generic Service Product ================= -->
        <record id="product_service_repair_generic" model="product.product">
            <field name="name">Repair Service</field>
            <field name="type">service</field>
            <field name="sale_ok">True</field>
            <field name="purchase_ok">False</field>
            <field name="lst_price">1000</field>
        </record>

        <!-- ================= Departments ================= -->
        <record id="hr_department_dtlp" model="hr.department">
            <field name="name">DTLP</field>
        </record>

        <record id="hr_department_hhp" model="hr.department">
            <field name="name">HHP</field>
        </record>

        <record id="hr_department_pcav" model="hr.department">
            <field name="name">PCAV</field>
        </record>

        <!-- ================= Unit Types ================= -->
        <record id="unit_type_laptop" model="repair.unit.type">
            <field name="name">Laptop</field>
            <field name="department_id" ref="hr_department_dtlp"/>
            <field name="code_prefix">L</field>
        </record>
        
        <record id="unit_type_desktop" model="repair.unit.type">
            <field name="name">Desktop</field>
            <field name="department_id" ref="hr_department_dtlp"/>
            <field name="code_prefix">D</field>
        </record>
        
        <record id="unit_type_macbook" model="repair.unit.type">
            <field name="name">Macbook</field>
            <field name="department_id" ref="hr_department_dtlp"/>
            <field name="code_prefix">M</field>
        </record>
        
        <record id="unit_type_phone" model="repair.unit.type">
            <field name="name">Phone</field>
            <field name="department_id" ref="hr_department_hhp"/>
            <field name="code_prefix">P</field>
        </record>
        
        <record id="unit_type_canon_printer" model="repair.unit.type">
            <field name="name">Canon Printer</field>
            <field name="department_id" ref="hr_department_pcav"/>
            <field name="code_prefix">CP</field>
        </record>
        
        <record id="unit_type_hp_printer" model="repair.unit.type">
            <field name="name">HP Printer</field>
            <field name="department_id" ref="hr_department_pcav"/>
            <field name="code_prefix">HP</field>
        </record>
        
        <record id="unit_type_brother_printer" model="repair.unit.type">
            <field name="name">Brother Printer</field>
            <field name="department_id" ref="hr_department_pcav"/>
            <field name="code_prefix">BP</field>
        </record>
        
        <record id="unit_type_epson_printer" model="repair.unit.type">
            <field name="name">Epson Printer</field>
            <field name="department_id" ref="hr_department_pcav"/>
            <field name="code_prefix">EP</field>
        </record>
        
        <record id="unit_type_projector" model="repair.unit.type">
            <field name="name">Projector</field>
            <field name="department_id" ref="hr_department_pcav"/>
            <field name="code_prefix">PJ</field>
        </record>

    </data>
</odoo>
