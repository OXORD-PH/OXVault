<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="ar_tools_template" t-name="oxord_repair.ar_tools_template">
        <main>
            <t t-foreach="docs" t-as="o">

                <style>
                    @page { size:A4; margin:8mm; }
                    main { page-break-after:avoid; page-break-before:avoid; }
                    body { font-family: Arial, sans-serif; font-size:13px; color:#000; }

                    .oxord-body-wrapper {
                        width:100%;
                        padding:2mm 6mm;
                        box-sizing:border-box;
                    }

                    .oxord-section {
                        background-color:#e0f2f1;
                        color:#000;
                        padding:3px 6px;
                        font-weight:bold;
                        margin-top:2mm;
                        border-left:3px solid #00796b;
                        border-radius:3px;
                        font-size:13px;
                    }

                    .tech-box {
                        border:1px solid #00796b;
                        border-radius:5px;
                        padding:5px 7px;
                        margin-bottom:2mm;
                        background-color:#f0f5f5;
                        font-size:12px;
                    }

                    table { width:100%; border-collapse:collapse; }
                    th { background-color:#00796b; color:#fff; padding:6px; font-size:12px; }
                    td { border:1px solid #00796b; padding:6px; font-size:12px; }
                    .no-border td { border:none; padding:3px 5px; }
                    .signature-table td { vertical-align:top; padding-top:20px; font-size:12px; }

                    .oxord-footer { font-size:9px; color:#555; margin-top:6px; text-align:center; }
                </style>

                <!-- HEADER -->
                <table style="width:100%; border-bottom:2px solid #009688; margin-bottom:2mm;">
                    <tr>
                        <td style="width:22%;">
                            <img t-if="o.company_id.logo"
                                 t-att-src="'data:image/png;base64,%s' % o.company_id.logo.decode()"
                                 style="height:50px;"
                                 alt="Company Logo"/>
                        </td>
                        <td>
                            <div style="font-size:15px; font-weight:bold;">
                                OXORD COMPUTER SOLUTIONS &amp; REPAIR CENTER
                            </div>
                            <div style="font-size:12px;">
                                2F Robinsons Place Roxas, Pueblo de Panay Lawa-an, Roxas City
                            </div>
                            <div style="font-size:12px;">
                                La Hacienda Annex Bldg., Arnaldo Blvd., Roxas City, Capiz
                            </div>
                        </td>
                    </tr>
                </table>

                <!-- FORM TITLE -->
                <div style="font-size:24px; font-weight:bold; text-align:center; margin-bottom:4mm;">
                    ACKNOWLEDGEMENT FORM
                </div>

                <!-- PREPARED BY / REFERENCE -->
                <div class="oxord-section">Prepared By &amp; Reference</div>
                <div class="tech-box">
                    <table class="no-border">
                        <tr><td style="width:25%;">Prepared By:</td><td><t t-esc="o.employee_id.name or '-'"/></td></tr>
                        <tr><td>Department:</td><td><t t-esc="o.department_id.name or '-'"/></td></tr>
                        <tr><td>Date:</td><td><t t-esc="o.date or '-'"/></td></tr>
                        <tr><td>Reference No:</td><td><t t-esc="o.name or '-'"/></td></tr>
                    </table>
                </div>

                <!-- TOOLS / EQUIPMENT -->
                <div class="oxord-section">Tools / Equipment</div>
                <div class="tech-box">
                    <p>This is to acknowledge that I brought tools/equipment listed below from Oxord Computer Solutions.</p>
                    <table>
                        <tr style="border-bottom:1px solid #00796b;">
                            <th style="text-align:left;">Item Name</th>
                            <th style="text-align:right;">Quantity</th>
                            <th style="text-align:left;">Notes</th>
                        </tr>
                        <t t-foreach="o.tool_line_ids" t-as="line">
                            <tr>
                                <td><t t-esc="line.product_name or '-'"/></td>
                                <td style="text-align:right;"><t t-esc="line.quantity or 0"/></td>
                                <td><t t-esc="line.notes or '-'"/></td>
                            </tr>
                        </t>
                    </table>
                </div>

                <!-- SIGNATURES -->
                <div class="oxord-section">Acknowledgement / Confirmation</div>
                <div class="tech-box">
                    <table class="signature-table" style="width:100%;">
                        <tr>
                            <td style="width:50%; text-align:center;">
                                Received above items in good order and condition<br/><br/><br/>
                                ________________________________<br/>
                                Oxord Computer Solutions<br/>
                                Signature over Printed Name
                            </td>
                            <td style="width:50%; text-align:center;">
                                Received and Confirmed by:<br/><br/><br/>
                                ________________________________<br/>
                                Signature over Printed Name
                            </td>
                        </tr>
                    </table>
                </div>

            </t>
        </main>
    </template>
</odoo>
