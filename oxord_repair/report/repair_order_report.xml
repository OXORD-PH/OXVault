<odoo>
    <!-- Custom Paper Format -->
    <record id="paperformat_repair_order" model="report.paperformat">
        <field name="name">Repair Order No Header</field>
        <field name="default" eval="False"/>
        <field name="format">A4</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">0</field>
        <field name="margin_bottom">0</field>
        <field name="margin_left">0</field>
        <field name="margin_right">0</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">0</field>
        <field name="dpi">90</field>
    </record>

    <!-- Report Action -->
    <record id="action_report_repair_order" model="ir.actions.report">
        <field name="name">Repair Order</field>
        <field name="model">repair.order</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">oxord_repair.report_repair_order_document</field>
        <field name="report_file">oxord_repair.report_repair_order_document</field>
        <field name="print_report_name">'Repair Order - %s' % (object.name)</field>
        <field name="paperformat_id" ref="oxord_repair.paperformat_repair_order"/>
    </record>

        <!-- Technical Report Paper Format -->
    <record id="paperformat_technical_report" model="report.paperformat">
        <field name="name">Technical Report No Header</field>
        <field name="default" eval="False"/>
        <field name="format">A4</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">0</field>
        <field name="margin_bottom">0</field>
        <field name="margin_left">0</field>
        <field name="margin_right">0</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">0</field>
        <field name="dpi">90</field>
    </record>

    <!-- Technical Report Action -->
    <record id="action_report_technical_report" model="ir.actions.report">
        <field name="name">Technical Report</field>
        <field name="model">technical.report</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">oxord_repair.report_technical_report_document</field>
        <field name="report_file">oxord_repair.report_technical_report_document</field>
        <field name="print_report_name">'Technical Report - %s' % (object.name)</field>
        <field name="paperformat_id" ref="oxord_repair.paperformat_technical_report"/>
    </record>
    
</odoo>
