<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- Job Order Paper Format -->
    <record id="paperformat_job_order" model="report.paperformat">
        <field name="name">Job Order</field>
        <field name="default" eval="False"/>
        <field name="format">A4</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">4</field>
        <field name="margin_bottom">4</field>
        <field name="margin_left">4</field>
        <field name="margin_right">4</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">1</field>
        <field name="dpi">90</field>
    </record>

    <!-- Job Order Report Action -->
    <record id="action_report_job_order" model="ir.actions.report">
        <field name="name">Job Order</field>
        <field name="model">job.order</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">oxord_repair.job_order_template</field>
        <field name="report_file">oxord_repair.job_order_template</field>
        <field name="print_report_name">'Job Order - %s' % (object.name)</field>
        <field name="paperformat_id" ref="oxord_repair.paperformat_job_order"/>
    </record>

</odoo>
