<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <!-- List View -->
        <record id="view_product_brand_list" model="ir.ui.view">
            <field name="name">product.brand.list</field>
            <field name="model">product.brand</field>
            <field name="arch" type="xml">
                <list string="Service Brands">
                    <field name="name"/>
                </list>
            </field>
        </record>

        <!-- Form View -->
        <record id="view_product_brand_form" model="ir.ui.view">
            <field name="name">product.brand.form</field>
            <field name="model">product.brand</field>
            <field name="arch" type="xml">
                <form string="Service Brands">
                    <sheet>
                        <group>
                            <field name="name"/>
                        </group>
                        <notebook>
                            <page string="Unit Types">
                                <!-- Correct one2many -->
                                <field name="unit_type_ids">
                                    <list string="Brand Unit Types" editable="bottom">
                                        <field name="unit_type_id"/>
                                        <field name="labor_amount"/>
                                        <field name="service_type"/>
                                    </list>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <!-- Chatter (Logs) -->
                    <chatter>
                        <field name="message_follower_ids"/>
                        <field name="message_ids"/>
                    </chatter>
                </form>
            </field>
        </record>

        <!-- Menu Action -->
        <record id="action_product_brand" model="ir.actions.act_window">
            <field name="name">Service Brands</field>
            <field name="res_model">product.brand</field>
            <field name="view_mode">list,form</field>
        </record>

    </data>
</odoo>
