<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Action for Job Orders -->
        <record id="action_job_orders" model="ir.actions.act_window">
            <field name="name">Job Orders</field>
            <field name="res_model">job.order</field>
            <field name="view_mode">list,form</field>
            <field name="view_id" ref="oxord_repair.view_job_orders_list"/>
        </record>

        <!-- Menu inside the Repair module, next to Orders -->
        <menuitem id="menu_job_orders"
                  name="Job Orders"
                  parent="repair.menu_repair_order"
                  action="oxord_repair.action_job_orders"
                  sequence="1"
                  groups="base.group_system"/>
    </data>
</odoo>
