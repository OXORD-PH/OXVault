<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <!-- List view -->
        <record id="view_repair_problem_list" model="ir.ui.view">
            <field name="name">repair.problem.list</field>
            <field name="model">repair.problem</field>
            <field name="arch" type="xml">
                <list string="Repair Service / Price List">
                    <field name="code"/>
                    <field name="name"/>
                    <field name="department_id"/>
                    <field name="unit_type_id"/>
                    <field name="estimated_cost"/>
                    <field name="product_id"/>
                </list>
            </field>
        </record>

        <!-- Form view -->
        <record id="view_repair_problem_form" model="ir.ui.view">
            <field name="name">repair.problem.form</field>
            <field name="model">repair.problem</field>
            <field name="arch" type="xml">
                <form string="Repair Service / Price List">
                    <sheet>
                        <group>
                            <field name="code" readonly="1"/>
                            <field name="name"/>
                            <field name="department_id"/>
                            <field name="unit_type_id"/>
                            <field name="estimated_cost"/>
                            <field name="product_id"/>
                        </group>
                    </sheet>

                    <!-- Chatter (Logs) -->
                    <chatter>
                        <field name="message_follower_ids"/>
                        <field name="message_ids"/>
                    </chatter>
                </form>
            </field>
        </record>

        <!-- Action -->
        <record id="action_repair_problem" model="ir.actions.act_window">
            <field name="name">Repair Service / Price List</field>
            <field name="res_model">repair.problem</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to add a new Repair Service.
                </p>
            </field>
        </record>

    </data>
</odoo>
