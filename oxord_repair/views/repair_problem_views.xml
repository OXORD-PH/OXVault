<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- List view -->
        <record id="view_repair_problem_list" model="ir.ui.view">
            <field name="name">repair.problem.list</field>
            <field name="model">repair.problem</field>
            <field name="arch" type="xml">
                <list string="Repair Problems">
                    <field name="name"/>
                    <field name="department_id"/>
                    <field name="estimated_cost"/>
                </list>
            </field>
        </record>

        <!-- Form view -->
        <record id="view_repair_problem_form" model="ir.ui.view">
            <field name="name">repair.problem.form</field>
            <field name="model">repair.problem</field>
            <field name="arch" type="xml">
                <form string="Repair Problem">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="department_id"/>
                            <field name="estimated_cost"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Action -->
        <record id="action_repair_problem" model="ir.actions.act_window">
            <field name="name">Repair Problems</field>
            <field name="res_model">repair.problem</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to add a new Repair Problem.
                </p>
            </field>
        </record>
    </data>
</odoo>
