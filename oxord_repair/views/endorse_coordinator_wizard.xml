<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data>

    <!-- Wizard Form View for Endorse to Coordinator -->
    <record id="view_endorse_coordinator_wizard_form" model="ir.ui.view">
      <field name="name">endorse.coordinator.wizard.form</field>
      <field name="model">endorse.coordinator.wizard</field>
      <field name="arch" type="xml">
        <form string="Endorse to Coordinator">
          <group>
            <field name="repair_id" invisible="1"/>
            <field name="coordinator_id" required="1"/>
          </group>
          <footer>
            <button string="Confirm"
                    type="object"
                    name="action_endorse"
                    class="btn-primary"/>
            <button string="Cancel"
                    class="btn-secondary"
                    special="cancel"/>
          </footer>
        </form>
      </field>
    </record>

  </data>
</odoo>
