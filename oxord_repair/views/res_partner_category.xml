<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Inherit the existing contact tag form to add type fields -->
        <record id="view_res_partner_category_form_custom" model="ir.ui.view">
            <field name="name">res.partner.category.form.custom</field>
            <field name="model">res.partner.category</field>
            <field name="inherit_id" ref="base.view_partner_category_form"/>
            <field name="arch" type="xml">

                <!-- Insert after the 'name' field -->
                <xpath expr="//field[@name='name']" position="after">
                    <group string="Type Settings" col="2">
                        <field name="type_name"/>
                        <field name="is_company_type"/>
                        <field name="is_individual_type"/>
                    </group>
                </xpath>

            </field>
        </record>
    </data>
</odoo>
