<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data>

    <!-- List View -->
    <record id="view_ar_free_service_list" model="ir.ui.view">
      <field name="name">ar.free.service.list</field>
      <field name="model">ar.free.service</field>
      <field name="arch" type="xml">
        <list string="AR for Free Service">
          <field name="name"/>
          <field name="employee_id"/>
          <field name="date"/>
          <field name="department_id"/>
          <field name="state"/>
        </list>
      </field>
    </record>

    <!-- Form View -->
    <record id="view_ar_free_service_form" model="ir.ui.view">
      <field name="name">ar.free.service.form</field>
      <field name="model">ar.free.service</field>
      <field name="arch" type="xml">
        <form string="AR for Free Service">
          <header>
            <button name="action_generate_reference"
                    string="Save &amp; Generate"
                    type="object"
                    class="btn-primary"
                    invisible="state != 'draft'"/>
            <button name="%(action_report_ar_free_service)d"
                    string="Print"
                    type="action"
                    class="btn-secondary"
                    groups="base.group_system"
                    invisible="state != 'saved'"/>
            <field name="state" widget="statusbar" readonly="1"/>
          </header>

          <sheet>

            <!-- Reference / Header -->
            <group class="oxord-card" colspan="2">
              <group>
                <field name="employee_id"/>
                <field name="department_id"/>
                <field name="date"/>
              </group>
              <group>
                <div style="font-size:28px; font-weight:bold; text-align:center;">
                  <field name="name" readonly="1"/>
                </div>
              </group>
            </group>

            <!-- Customer & Unit Information -->
            <group class="oxord-card" string="Customer &amp; Unit Information" col="2">
              <group>
                <field name="recipient_name" string="Received By"/>
                <field name="wo_number" string="WO Number"/>
                <field name="customer_company" string="Company"/>
              </group>
              <group>
                <field name="brand_model" string="Brand / Model"/>
                <field name="serial_number" string="Serial Number"/>
                <field name="unit_type" string="Unit Type"/>
              </group>
            </group>

          </sheet>
        </form>
      </field>
    </record>

    <!-- Action -->
    <record id="action_ar_free_service" model="ir.actions.act_window">
      <field name="name">AR for Free Service</field>
      <field name="res_model">ar.free.service</field>
      <field name="view_mode">list,form</field>
      <field name="help" type="html">
        <p class="oe_view_nocontent_create">
          Click to add a new acknowledgment for free service units.
        </p>
      </field>
    </record>

  </data>
</odoo>
