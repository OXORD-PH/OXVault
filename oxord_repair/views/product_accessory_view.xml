<odoo>
    <data>
        <record id="view_product_template_form_accessory" model="ir.ui.view">
            <field name="name">product.template.form.accessory</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='categ_id']" position="after">
                    <field name="is_accessory"/>
                </xpath>
            </field>
        </record>

        <record id="view_product_template_tree_accessory" model="ir.ui.view">
            <field name="name">product.template.tree.accessory</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_tree_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='default_code']" position="after">
                    <field name="is_accessory"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
