<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Inherit Repair Order List View -->
        <record id="view_repair_order_list_custom" model="ir.ui.view">
            <field name="name">repair.order.list.custom</field>
            <field name="model">repair.order</field>
            <field name="inherit_id" ref="repair.view_repair_order_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//list" position="replace">
                    <list string="Repair Orders" decoration-info="state == 'under_repair'" decoration-success="state == 'done'" decoration-muted="state == 'draft'">
                        <field name="name" string="Reference"/>
                        <field name="model_id" string="Model"/>
                        <field name="received_by" string="Received By"/>
                        <field name="received_date" string="Received Date"/>
                        <field name="repair_duration_formatted" string="Repair Duration"/>
                        <field name="coordinator_id" string="Released by"/>
                        <field name="coordinator_to_release_formatted" string="Releasing Duration"/>
                        <field name="total_aging_formatted" string="Total Aging"/>
                        <field name="state" string="Status" widget="badge"/>
                    </list>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
