<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_repair_endorse_wizard" model="ir.ui.view">
        <field name="name">repair.endorse.wizard.form</field>
        <field name="model">repair.endorse.wizard</field>
        <field name="arch" type="xml">
            <form string="Endorse Technician">
                <group>
                    <field name="new_technician_id"/>
                </group>

                <footer>
                    <button name="action_apply"
                            string="Apply"
                            type="object"
                            class="btn-primary"/>

                    <button string="Cancel"
                            class="btn-secondary"
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
