<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Coordinator: can see all repair orders -->
    <record id="rule_repair_coordinator_all" model="ir.rule">
        <field name="name">Repair Coordinator - see all</field>
        <field name="model_id" ref="repair.model_repair_order"/>
        <field name="groups" eval="[(4, ref('oxord_repair.group_repair_coordinator'))]"/>
        <field name="domain_force">[(1, '=', 1)]</field>
    </record>

    <!-- Technician: only sees assigned repair orders -->
    <record id="rule_repair_technician_own" model="ir.rule">
        <field name="name">Repair Technician - own only</field>
        <field name="model_id" ref="repair.model_repair_order"/>
        <field name="groups" eval="[(4, ref('oxord_repair.group_repair_technician'))]"/>
        <field name="domain_force">[('endorse_to_tech','=',user.id)]</field>
    </record>

    <!-- Admin: can see all repair orders (ignore company) -->
    <record id="rule_repair_admin_all" model="ir.rule">
        <field name="name">Repair Admin - see all</field>
        <field name="model_id" ref="repair.model_repair_order"/>
        <field name="groups" eval="[(4, ref('base.group_system'))]"/>
        <field name="domain_force">[(1, '=', 1)]</field>
    </record>
</odoo>
