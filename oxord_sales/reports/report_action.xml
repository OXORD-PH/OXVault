<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Custom Paper Format for Quotation -->
    <record id="paperformat_quotation" model="report.paperformat">
        <field name="name">Quotation No Header</field>
        <field name="default" eval="False"/>
        <field name="format">A4</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">4</field>
        <field name="margin_bottom">4</field>
        <field name="margin_left">4</field>
        <field name="margin_right">4</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">2</field>
        <field name="dpi">90</field>
    </record>

    <!-- Report Action for Quotation -->
    <record id="action_report_oxord_quotation" model="ir.actions.report">
        <field name="name">Oxord Quotation</field>
        <field name="model">sale.order</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">oxord_sales.quotation_template</field>
        <field name="report_file">oxord_sales.quotation_template</field>
        <field name="print_report_name">'Quotation - %s' % (object.name)</field>
        <field name="paperformat_id" ref="oxord_sales.paperformat_quotation"/>
    </record>

</odoo>
