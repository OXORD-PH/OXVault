<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_sale_order_form_oxord_quotation" model="ir.ui.view">
        <field name="name">sale.order.form.oxord.quotation</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="%(action_report_oxord_quotation)d"
                        string="Print Oxord Quotation"
                        type="action"
                        class="btn-primary"/>
            </xpath>
        </field>
    </record>

</odoo>
