<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="salesperson.SalespersonPopup">
        <div class="popup popup-large">
            <div class="popup-title">
                Select Salesperson
            </div>

            <div class="popup-content">
                <input type="text"
                       placeholder="Search..."
                       t-model="state.search"
                       class="search-input"/>

                <div class="employee-list">
                    <t t-foreach="filteredEmployees" t-as="emp" t-key="emp.id">
                        <div class="employee-item"
                             t-on-click="() => selectEmployee(emp)">
                            <span><t t-esc="emp.name"/></span>
                        </div>
                    </t>
                </div>
            </div>

            <div class="popup-footer">
                <button class="button cancel" t-on-click="props.close">
                    Cancel
                </button>
            </div>
        </div>
    </t>

</templates>
