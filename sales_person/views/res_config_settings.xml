<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_sales_person" model="ir.ui.view">
        <field name="name">res.config.settings.sales.person</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">

            <!-- Insert inside the POS Interface section -->
            <xpath expr="//block[@id='pos_interface_section']" position="inside">

                <!-- POS Config selector -->
                <setting id="pos_config_selector"
                         string="POS Configuration"
                         help="Select which POS Config to apply these settings">
                    <field name="pos_config_id" options="{'no_create': True}"/>
                </setting>

                <!-- Allowed Sales Person field -->
                <setting id="allowed_sales_person"
                         string="Allowed Sales Person"
                         help="Employees allowed to be selected as Sales Person in POS">
                    <field name="sales_person_ids"
                           colspan="4"
                           widget="many2many_tags"
                           options="{'no_quick_create': True}"/>
                </setting>

            </xpath>

        </field>
    </record>
</odoo>
